@using System.Diagnostics
@{     
    Uri targetUri = Request.Url;
    Debug.WriteLine("Page : {0}", targetUri);
}
<!DOCTYPE html xmlns="http://schemas.microsoft.com/intellisense/xhtml-11" >
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>BookCorp Solutions - @Page.Title</title>
        <link href="@Href("~/Styles/jquery-ui-1.8.18.custom.css")" rel="stylesheet" />
        <link href="@Href("~/Styles/Site.css")" rel="stylesheet" />
        <link href="@Href("~/Styles/Buttons.css")" rel="stylesheet" />
        <link href="@Href("~/Styles/Tabs.css")" rel="stylesheet" />
    </head>
    <body>
        <script type="text/javascript" src="@Href("~/Scripts/jquery-1.7.1.js")" ></script>
        <script type="text/javascript" src="@Href("~/Scripts/jquery-ui-1.8.18.custom.min.js")" ></script>
        <script type="text/javascript" src="@Href("~/Scripts/jquery.validate.js")" ></script>
        <script src="@Href("~/Scripts/BookSelection.js")" type="text/javascript"></script>
        <div id="page">
            <div id="header">
                <h1 class="site-title">Black River Systems, Inc. - Lending Library</h1>
            </div>
            <div id="main">
                <div id="content">
                    @RenderBody()
                </div>
                <div id="footer">
                    &copy; @DateTime.Now.Year - Black River Systems, Inc.
                </div>
            </div>
        </div>
    </body>
</html>